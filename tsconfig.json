{
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es5",
        "module": "es6",
        "jsx": "react",
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "@components/": [
                "src/components/"
            ],
            "@containers/": [
                "src/containers/"
            ],
            "@context/": [
                "src/context/"
            ],
            "@hooks/": [
                "src/hooks/"
            ],
            "@routes/": [
                "src/routes/"
            ],
            "@styles/": [
                "src/styles/"
            ],
            "@assets/": [
                "src/assets/"
            ]
        }
    }
}